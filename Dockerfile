# Stage 1: Dependencies
FROM node:20-alpine AS deps
WORKDIR /app
COPY package.json package-lock.json* ./
# Using --legacy-peer-deps based on your project's likely setup
RUN npm install --legacy-peer-deps

# Stage 2: Builder
FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Declare build arguments (these will be passed by docker-compose from .env or environment)
ARG NEXT_PUBLIC_APP_URL
ARG NEXT_PUBLIC_APPWRITE_ENDPOINT
ARG NEXT_PUBLIC_APPWRITE_PROJECT_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_TRANSACTIONS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_MESSAGES_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_NOTIFICATIONS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_BOOKMARKS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_PROJECTS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_USERS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_JOBS_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_WALLET_ID
ARG NEXT_PUBLIC_APPWRITE_DATABASE_PAYMENTMETHODS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_TRANSACTIONS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_MESSAGES_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_NOTIFICATIONS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_CATEGORIES_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_BOOKMARKS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_PROJECTS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_TASKS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_PROFILES_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_CONNECTIONS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_APPLICATIONS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_REVIEWS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_JOBS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_CRYPTOTRANSACTIONS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_BALANCES_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_WALLETS_ID
ARG NEXT_PUBLIC_APPWRITE_COLLECTION_PAYMENTMETHODS_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_MISCELLANEOUS_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_MESSAGE_ATTACHMENTS_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_MEDIA_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_DOCUMENTS_ID
ARG NEXT_PUBLIC_APPWRITE_BUCKET_JOB_ATTACHMENTS_ID

# Set environment variables from arguments for the build process
ENV NEXT_PUBLIC_APP_URL=$NEXT_PUBLIC_APP_URL
ENV NEXT_PUBLIC_APPWRITE_ENDPOINT=$NEXT_PUBLIC_APPWRITE_ENDPOINT
ENV NEXT_PUBLIC_APPWRITE_PROJECT_ID=$NEXT_PUBLIC_APPWRITE_PROJECT_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_TRANSACTIONS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_TRANSACTIONS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_MESSAGES_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_MESSAGES_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_NOTIFICATIONS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_NOTIFICATIONS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_BOOKMARKS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_BOOKMARKS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_PROJECTS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_PROJECTS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_USERS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_USERS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_JOBS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_JOBS_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_WALLET_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_WALLET_ID
ENV NEXT_PUBLIC_APPWRITE_DATABASE_PAYMENTMETHODS_ID=$NEXT_PUBLIC_APPWRITE_DATABASE_PAYMENTMETHODS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_TRANSACTIONS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_TRANSACTIONS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_MESSAGES_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_MESSAGES_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_NOTIFICATIONS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_NOTIFICATIONS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_CATEGORIES_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_CATEGORIES_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_BOOKMARKS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_BOOKMARKS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_PROJECTS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_PROJECTS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_TASKS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_TASKS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_PROFILES_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_PROFILES_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_CONNECTIONS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_CONNECTIONS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_APPLICATIONS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_APPLICATIONS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_REVIEWS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_REVIEWS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_JOBS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_JOBS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_CRYPTOTRANSACTIONS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_CRYPTOTRANSACTIONS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_BALANCES_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_BALANCES_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_WALLETS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_WALLETS_ID
ENV NEXT_PUBLIC_APPWRITE_COLLECTION_PAYMENTMETHODS_ID=$NEXT_PUBLIC_APPWRITE_COLLECTION_PAYMENTMETHODS_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_MISCELLANEOUS_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_MISCELLANEOUS_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_MESSAGE_ATTACHMENTS_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_MESSAGE_ATTACHMENTS_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_MEDIA_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_MEDIA_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_DOCUMENTS_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_PROJECT_DOCUMENTS_ID
ENV NEXT_PUBLIC_APPWRITE_BUCKET_JOB_ATTACHMENTS_ID=$NEXT_PUBLIC_APPWRITE_BUCKET_JOB_ATTACHMENTS_ID

RUN npm run build

# Stage 3: Runner
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy necessary artifacts from the builder stage
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json 
# For npm run start script

# Expose port (default 3000, as per server.ts)
EXPOSE 3000

# Runtime environment variables will be injected by Docker Compose or Kubernetes.
# NEXT_PUBLIC_ variables are baked in during the build.
# Other runtime variables (not prefixed with NEXT_PUBLIC_) can be passed here if needed.

CMD ["npm", "run", "start"]